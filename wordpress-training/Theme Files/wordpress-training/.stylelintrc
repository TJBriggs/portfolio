{
  "extends": "@10up/stylelint-config",
  "plugins": [
    "stylelint-declaration-use-variable",
    "stylelint-order"
  ],
  rules: {
    "selector-nested-pattern": null,
    "sh-waqar/declaration-use-variable": null,
    "at-rule-empty-line-before": [ 'always', {
      except: ['blockless-after-blockless', 'inside-block'],
      ignore: ['after-comment', 'inside-block', 'first-nested'],
      ignoreAtRules: ['extend', 'if', 'function']
    } ],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": ['extend', 'if', 'function']
    } ],
    "block-closing-brace-space-before" : null,
    "block-closing-brace-space-after" : null,
    "block-closing-brace-newline-before": 'always-multi-line',
    "block-opening-brace-newline-after": 'always-multi-line',
    "color-hex-case": null,
    "color-hex-length": null,
    "color-named": [ null, { severity: 'warning' } ],
    "declaration-block-single-line-max-declarations" : 1,
    "function-url-quotes": "always",
    "no-descending-specificity": null,
    "no-eol-whitespace": null,
    "no-invalid-double-slash-comments": [ true, { severity: "warning" } ],
    "order/properties-alphabetical-order": [ true, { severity: "warning" } ],
    "property-no-unknown": [ true, ignoreProperties: ["/^///", "custom"] ],
    "rule-empty-line-before": null,
    "selector-class-pattern": null,
  }
}

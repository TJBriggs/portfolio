{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "mx/cards",
	"version": "0.1.2",
	"title": "Cards",
	"category": "cards",
	"icon": "analytics",
	"description": "Cards block with several variations. Layout options are available under Patterns > Cards.",
	"textdomain": "mx-blocks-plugin",
	"attributes": {
		"itemOrientation": {
			"type": "string",
			"default": "vertical"
		},
		"orientationIcon": {
			"type": "string"
		},
		"marginBottom": {
			"type": "string",
			"default": "none"
		},
		"marginTop": {
			"type": "string",
			"default": "none"
		},
		"paddingBottom": {
			"type": "string",
			"default": "default"
		},
		"paddingTop": {
			"type": "string",
			"default": "default"
		},
		"widthOption": {
			"type": "string",
			"default": "centered"
		},
		"widthIcon": {
			"type": "string"
		}
	},
	"supports": {
		"anchor": true,
		"reusable": true,
		"html": false,
		"color": {
			"background": true
		}
	},
	"example": {
		"viewportWidth": 1200
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css"
}
